<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee 
         https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">
    
    <display-name>PollyClinic</display-name>
    
    <!-- Login Servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <!-- Doctor Servlets -->
    <servlet>
        <servlet-name>GetDoctorsServlet</servlet-name>
        <servlet-class>GetDoctorsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetDoctorsServlet</servlet-name>
        <url-pattern>/getDoctors</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>GetTodayAppointmentsServlet</servlet-name>
        <servlet-class>GetTodayAppointmentsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetTodayAppointmentsServlet</servlet-name>
        <url-pattern>/getTodayAppointments</url-pattern>
    </servlet-mapping>
    
    <!-- Appointment Servlets -->
    <servlet>
        <servlet-name>CheckPatientExistsServlet</servlet-name>
        <servlet-class>CheckPatientExistsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckPatientExistsServlet</servlet-name>
        <url-pattern>/checkPatientExists</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>BookAppointmentServlet</servlet-name>
        <servlet-class>BookAppointmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookAppointmentServlet</servlet-name>
        <url-pattern>/bookAppointment</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>GetAppointmentsServlet</servlet-name>
        <servlet-class>GetAppointmentsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetAppointmentsServlet</servlet-name>
        <url-pattern>/getAppointments</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CancelAppointmentServlet</servlet-name>
        <servlet-class>CancelAppointmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CancelAppointmentServlet</servlet-name>
        <url-pattern>/cancelAppointment</url-pattern>
    </servlet-mapping>
    
    <!-- Patient Remarks Servlets -->
    <servlet>
        <servlet-name>GetPatientRemarksServlet</servlet-name>
        <servlet-class>GetPatientRemarksServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetPatientRemarksServlet</servlet-name>
        <url-pattern>/getPatientRemarks</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>SaveRemarkServlet</servlet-name>
        <servlet-class>SaveRemarkServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SaveRemarkServlet</servlet-name>
        <url-pattern>/saveRemark</url-pattern>
    </servlet-mapping>
    
    <!-- Prescription Servlets -->
    <servlet>
        <servlet-name>SubmitPrescriptionServlet</servlet-name>
        <servlet-class>SubmitPrescriptionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SubmitPrescriptionServlet</servlet-name>
        <url-pattern>/submitPrescription</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>GetCompletedAppointmentsServlet</servlet-name>
        <servlet-class>GetCompletedAppointmentsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetCompletedAppointmentsServlet</servlet-name>
        <url-pattern>/getCompletedAppointments</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>SearchCompletedAppointmentsServlet</servlet-name>
        <servlet-class>SearchCompletedAppointmentsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchCompletedAppointmentsServlet</servlet-name>
        <url-pattern>/searchCompletedAppointments</url-pattern>
    </servlet-mapping>
    
    <!-- Admin Servlets -->
    <servlet>
        <servlet-name>AddDoctorServlet</servlet-name>
        <servlet-class>AddDoctorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddDoctorServlet</servlet-name>
        <url-pattern>/addDoctor</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>GetAllDoctorsServlet</servlet-name>
        <servlet-class>GetAllDoctorsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetAllDoctorsServlet</servlet-name>
        <url-pattern>/getAllDoctors</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AddReceptionistServlet</servlet-name>
        <servlet-class>AddReceptionistServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddReceptionistServlet</servlet-name>
        <url-pattern>/addReceptionist</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>GetAllReceptionistsServlet</servlet-name>
        <servlet-class>GetAllReceptionistsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetAllReceptionistsServlet</servlet-name>
        <url-pattern>/getAllReceptionists</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ToggleUserStatusServlet</servlet-name>
        <servlet-class>ToggleUserStatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ToggleUserStatusServlet</servlet-name>
        <url-pattern>/toggleUserStatus</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>UpdateDoctorServlet</servlet-name>
        <servlet-class>UpdateDoctorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateDoctorServlet</servlet-name>
        <url-pattern>/updateDoctor</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>UpdateReceptionistServlet</servlet-name>
        <servlet-class>UpdateReceptionistServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateReceptionistServlet</servlet-name>
        <url-pattern>/updateReceptionist</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>GetAdminStatsServlet</servlet-name>
        <servlet-class>GetAdminStatsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetAdminStatsServlet</servlet-name>
        <url-pattern>/getAdminStats</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>GetAllAppointmentsServlet</servlet-name>
        <servlet-class>GetAllAppointmentsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetAllAppointmentsServlet</servlet-name>
        <url-pattern>/getAllAppointments</url-pattern>
    </servlet-mapping>
    
    <!-- Time Slot Management Servlet -->
    <servlet>
        <servlet-name>TimeSlotServlet</servlet-name>
        <servlet-class>TimeSlotServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TimeSlotServlet</servlet-name>
        <url-pattern>/timeSlots</url-pattern>
    </servlet-mapping>
    
    <!-- Get Prescription Servlet -->
    <servlet>
        <servlet-name>GetPrescriptionServlet</servlet-name>
        <servlet-class>GetPrescriptionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetPrescriptionServlet</servlet-name>
        <url-pattern>/getPrescription</url-pattern>
    </servlet-mapping>
    
    <!-- Check Availability Servlet -->
    <servlet>
        <servlet-name>CheckAvailabilityServlet</servlet-name>
        <servlet-class>CheckAvailabilityServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckAvailabilityServlet</servlet-name>
        <url-pattern>/checkAvailability</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>SearchPatientsServlet</servlet-name>
        <url-pattern>/searchPatients</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>GetPatientHistoryServlet</servlet-name>
        <url-pattern>/getPatientHistory</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ModifyAppointmentServlet</servlet-name>
        <url-pattern>/modifyAppointment</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>